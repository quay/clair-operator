{
  "apiVersion": "batch/v1",
  "kind": "CronJob",
  "metdata": {
    "name": "⚠️",
    "labels": {
      "app.kubernetes.io/name": "clair",
      "app.kubernetes.io/managed-by": "clair-operator"
    }
  },
  "spec": {
    "concurrencyPolicy": "Forbid",
    "startingDeadlineSeconds": 10,
    "timeZone": "Etc/UTC",
    "schedule": "0 */8 * * *",
    "jobTemplate": {
      "metadata": {
        "name": "⚠️",
        "labels": {
          "app.kubernetes.io/name": "clair",
          "app.kubernetes.io/managed-by": "clair-operator"
        }
      },
      "spec": {
        "activeDeadlineSeconds": 3600,
        "completionMode": "NonIndexed",
        "completions": 1,
        "parallelism": 1,
        "template": {
          "metadata": {
            "name": "⚠️",
            "labels": {
              "app.kubernetes.io/name": "clair",
              "app.kubernetes.io/managed-by": "clair-operator"
            }
          },
          "spec": {
            "revisionHistoryLimit": 3,
            "terminationGracePeriodSeconds": 10,
            "securityContext": {
              "runAsUser": 65532
            },
            "shareProcessNamespace": true,
            "volumes": [],
            "containers": [
              {
                "name": "clair",
                "image": "⚠️",
                "ports": [
                  {
                    "name": "introspection",
                    "containerPort": 8089
                  }
                ],
                "env": [
                  {
                    "name": "GOMAXPROCS",
                    "valueFrom": {
                      "resourceFieldRef": {
                        "containerName": "clair",
                        "resource": "requests.cpu"
                      }
                    }
                  }
                ],
                "volumeMounts": [],
                "workingDir": "/run/clair",
                "securityContext": {
                  "allowPrivilegeEscalation": false
                },
                "resources": {
                  "requests": {
                    "cpu": "1"
                  }
                },
                "startupProbe": {
                  "tcpSocket": {
                    "port": "http"
                  },
                  "initialDelaySeconds": 5,
                  "periodSeconds": 1
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/healthz",
                    "port": "introspection"
                  },
                  "initialDelaySeconds": 15,
                  "periodSeconds": 20
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/readyz",
                    "port": "introspection"
                  },
                  "initialDelaySeconds": 5,
                  "periodSeconds": 10
                }
              }
            ]
          }
        }
      }
    }
  }
}
